#include <stdio.h>
#include <stdlib.h>
#include <stdint.h>
#include <stdbool.h>
#include <string.h>

#include <getopt.h>

#include "pdm_fir.h"

#include "config.h"

/** @brief Size in Bits of a PDM Word */
#define WORD_SIZE 16

/**
 * @brief Function Used to print the usage Message
 *
 * @param stream Stream Where to print the message
 * @param program_name Program address (argv[0])
 * @param help_mode If it is A Help Message or juste the Usage (true: HELP)
 */
void print_usage(FILE *stream, char *program_name, bool help_mode) {
    fprintf(stream, "USAGE: %s [-h] [-f FACTOR] <Input File> <Outpufile>\n", program_name);
    if (help_mode == true) {
        fprintf(stream, "C Program to filter PDM Signals to PCM format\n\n");
        fprintf(stream, "Positional arguments:\n");
        fprintf(stream, "    <Input File>        PDM Signal file\n");
        fprintf(stream, "    <Output File>       PCM output file\n");
        fprintf(stream, "\nOptional arguments:\n");
        fprintf(stream, "    -h                  Show this help message\n");
        fprintf(stream, "    -f FACTOR           Decimation Factor of the filter\n");
        fprintf(stream, "    -s SAMPLING         Sampling Frequency of the PDM Signal");
    }
}

/**@brief Program Main Function
 *
 * @param argc Argument Count
 * @param argv Argument Vector
 * @return Error Code
 */
int main(int argc, char *argv[]) {
    // Argument handling
    char *input_file = NULL;
    char *output_file = NULL;
    fprintf(stdout, "PDM Filter v%s\n", PROJECT_VER);
    uint16_t decimation_factor = 64;
    size_t sound_fs = 3072000;
    int opt;
    char *endptr = NULL;
    while ((opt = getopt(argc, argv, "hf:s:")) != -1) {
        switch (opt) {
            case 'h':
                print_usage(stdout, argv[0], true);
                exit(EXIT_SUCCESS);
            case 'f':
                decimation_factor = strtol(optarg, &endptr, 10);
                break;
            case 's':
                sound_fs = strtol(optarg, &endptr, 10);
                break;
            default:
                print_usage(stderr, argv[0], false);
                exit(EXIT_FAILURE);
        }
    }
    if (optind >= argc) {
        print_usage(stderr, argv[0], true);
        exit(EXIT_FAILURE);
    }
    input_file = argv[optind];
    output_file = argv[optind + 1];

    // Filter Init
    pdm_fir_filter_config_t filter;
    pdm_fir_flt_config_init(&filter, decimation_factor, 0, 0, 1, WORD_SIZE);

    // Reading Input
    fprintf(stdout, "Reading PDM file: \"%s\"\n", input_file);
    FILE *fp_read = fopen(input_file, "rb");

    if (fp_read == NULL) {
        fprintf(stderr, "\"%s\" Not Found !\n", input_file);
        exit(EXIT_FAILURE);
    }

    //Reading Input file
    fseek(fp_read, 0L, SEEK_END);
    size_t file_size = ftell(fp_read);
    size_t pdm_length = file_size / sizeof(uint16_t);
    rewind(fp_read);
    uint16_t *pdm_signal;
    pdm_signal = malloc(file_size);
    if (pdm_signal == NULL) {
        fprintf(stderr, "MALLOC FAILED!\n");
        return -1;
    }
    fread(pdm_signal, file_size, 1, fp_read);
    fclose(fp_read);


    //filtering PDM
    size_t pdm_buffer_size = ((sound_fs / 1000) / WORD_SIZE);
    size_t pcm_buffer_size = ((sound_fs / 1000) / decimation_factor);

    uint16_t *pdm_buffer = malloc(sizeof(uint16_t) * pdm_buffer_size);
    uint16_t *pcm_buffer = malloc(sizeof(uint16_t) * pcm_buffer_size);

    fprintf(stdout, "Filtering PDM Signal\n");
    size_t pcm_length = pdm_length / (decimation_factor / WORD_SIZE);
    uint16_t *pcm_signal;
    pcm_signal = malloc(pcm_length * sizeof(uint16_t));
    uint32_t pcm_sound_index = 0;
    if (pcm_signal == NULL) {
        fprintf(stderr, "MALLOC FAILED!\n");
        return -1;
    }

    // Filtering PDM Signal in chunks of 128 * 16 PDM Samples
    for (size_t pdm_index = 0; pdm_index < pdm_length; pdm_index += 128) {
        //Copying Into pdm buffer
        memcpy(pdm_buffer, pdm_signal + pdm_index, pdm_buffer_size * sizeof(uint16_t));

        //filtering
        size_t filtered = pdm_fir_flt_chunk(&filter, pcm_buffer, pdm_buffer, pdm_buffer_size);

        //Copying into PCM Signal
        memcpy(pcm_signal + pcm_sound_index, pcm_buffer, sizeof(uint16_t) * filtered);
        pcm_sound_index += filtered;

    }


    //Writing PCM
    for (size_t i = 0; i < pcm_length; i += 8) {
        for (size_t j = 0; j < 8; j++)
            printf("0x%08x, ", pcm_signal[i + j]);
        printf("\n");
    }


    fprintf(stdout, "Writing PCM to \"%s\"\n", output_file);
    FILE *fp_write = fopen(output_file, "wb");
    //fwrite(pcm_signal, sizeof(uint16_t), pcm_length, fp_write);
    fclose(fp_write);

    pdm_fir_flt_config_deInit(&filter);
    free(pdm_buffer);
    free(pcm_buffer);
    free(pcm_signal);
    free(pdm_signal);
    return 0;
}
